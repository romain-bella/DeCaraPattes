{% extends 'base.html.twig' %}

{% block title %}Temoignages{% endblock %}

{% block body %}
    <h1 style="margin-top:20px;margin-bottom:20px; " class="blockquote text-center">Temoignages</h1>

    <table class="table table-dark table-striped">
        <tbody>
            <tr>
                <th>Auteur</th>
                <td>{{ temoignage.auteur }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ temoignage.libelle }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ temoignage.photo }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('temoignages_index') }}">Retour</a>

    <a class="btn btn-secondary" href="{{ path('temoignages_edit', {'id': temoignage.id}) }}">Modifier</a>

    {{ include('temoignages/_delete_form.html.twig') }}
{% endblock %}
